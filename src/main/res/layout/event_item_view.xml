<?xml version="1.0" encoding="utf-8"?>
<com.holmes.ponderosa.ui.event.EventItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="16dp"
    >
  <ImageView
      android:id="@+id/device_item_status_image"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentStart="true"
      android:layout_marginEnd="16dp"
      android:importantForAccessibility="no"
      tools:src="@drawable/avatar"
      />
  <TextView
      android:id="@+id/device_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/device_item_status_image"
      android:layout_toStartOf="@id/device_item_status"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="16sp"
      tools:text="Family Room Lights"
      />
</com.holmes.ponderosa.ui.event.EventItemView>
